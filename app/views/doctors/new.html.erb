  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" >E Treatment Room</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><%= link_to "Login",  doctorlogin_path  %></li>
