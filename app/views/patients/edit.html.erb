<%= render 'layouts/patient'%>
<div class ="container">
<h1>Update Profile</h1>
	<%= render 'layouts/message'%>
<div class ="jumbotron">
<%= form_with(model: @patient,local: true) do |form| %>
	<% if @patient.errors.any? %>
		<div id="error_explanation">
		<h2><%= pluralize(@patient.errors.count, "error") %> Error while updating patient:</h3>

		<ul>
		<% @patient.errors.full_messages.each do |msg| %>
		<li style="color:red;"><%= msg %></li>
		<% end %>
		</ul>
		</div>
	<% end %>
	<p>
	<div class="form-group">
	<%= form.label :name, 'Update Name' %>
	<%= form.text_field :name , class:"form-control"%>
	</div>
	</p>
	<p>
	<div class="form-group">
	<%= form.label :email, 'Update Email ID' %>
	<%= form.text_field :email , class:"form-control"%>
	</div>	
	</p>
	<p>
	<div class="form-group">
	<%= form.label :address, 'Update Address' %>	
	<%= form.text_area :address , class:"form-control"%>
	</div>
	</p>
	<p>
	<div class="form-group">
	<%= form.label :phoneno, 'Update Contact Number' %>
	<%= form.text_field :phoneno , class:"form-control"%>
	</div>
	</p>
	<p>
	<div class="form-group">
	<%= form.label :gender %><br>
	<%= form.radio_button :gender, 'male' %>Male
	<%= form.radio_button :gender, 'female' %>Female
	</div>
	</p>
	<p>
	<div class="form-group">
	<%= form.label :dob, 'Update Date Of Birth' %>
	<%= form.text_field :dob , class:"form-control"%>
	</div>
	</p>
	<p>
	<div class="form-group">
	<%= form.label :age, 'Update Age' %>
	<%= form.text_field :age , class:"form-control"%>
	</div>
	</p>
	<p>
	<div class="form-group">
	<%= form.label :password, 'Update Password' %>
	<%= form.password_field :password , placeholder:'Enter Password', class:"form-control"%>
	</div>
	</p>
	<p>
	<div class="form-group">
	<%= form.label :password_confirmation, 'Update Confirm Password' %>	
	<%= form.password_field :password_confirmation , class:"form-control"%>
	</div>
	</p> 
	<p align="center">
	<%= form.submit 'Submit' ,class:"btn btn-primary btn-md"%>
	</p>
<%end%>
</div>
</div>
