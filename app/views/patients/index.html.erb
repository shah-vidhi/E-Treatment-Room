<%= render 'layouts/admin'%>
<div class="container">
<h1>Listing All Patients</h1>
<%= render 'layouts/message'%>
 <div class="jumbotron">
<table class="table table-striped" style="width:100%" align="center">
  <tr>
    <th>Name</th>
    <th>Email ID</th>
    <th>Address</th>
    <th>Contact Number</th>
    <th>Gender</th>
    <th>Date Of Birth</th>
    <th>Age</th>
    <th>Password</th>
    <th>Actions</th>
  </tr>
 
  <% @patient.each do |patient| %>
    <tr>
      <td><%= patient.name %></td>
      <td><%= patient.email %></td>
      <td><%= patient.address %></td>
      <td><%= patient.phoneno %></td>
      <td><%= patient.gender %></td>
      <td><%= patient.dob %></td>
      <td><%= patient.age %></td>
      <td><%= patient.password %></td>
      <td><%= link_to "Delete Patient", patient_path(patient), class:"btn btn-primary btn-sm",
                                method: :delete,
                                data: { confirm: 'Are you sure you want to delete this?'}%>
      </td>
    </tr>
  <% end %>
</table>
</div>
</div>